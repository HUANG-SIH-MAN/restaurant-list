<h1 class="mb-1 restaurant-show-title">註冊帳號</h1>
<div class="container mb-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
    <form action="/users/register" method="POST">
        <div class="form-group mt-2">
            <i class="fas fa-user"></i> 
            <label for="user-name">使用者名稱</label>
            <input id="user-name" class="form-control" name="name" type="text"  placeholder="請輸入使用者名稱" value="{{ name }}" >
        </div>
        <div class="form-group mt-2">
            <i class="fas fa-envelope"></i> 
            <label for="user-email">電子郵件</label>
            <input id="user-email" class="form-control" name="email" type="email"  placeholder="請輸入電子郵件"  value="{{ email }}" required>
        </div>
        <div class="form-group mt-2">
            <i class="fas fa-key"></i> 
            <label for="user-password">密碼</label>
            <input id="user-password" class="form-control" name="password" type="password" placeholder="請輸入六位以上密碼" minlength="6" value="{{ password }}" required>
        </div> 
        <div class="form-group mt-2">
            <i class="fas fa-check-double"></i>
            <label for="user-confirmPassword">確認密碼</label>
            <input id="user-confirmPassword" class="form-control" name="confirmPassword" type="password" placeholder="再輸入密碼進行確認" minlength="6" value="{{ confirmPassword }}" required>
        </div>                
    <button class="btn btn-outline-primary mt-3" type="submit">註冊帳號</button>
    <div class="mt-3">已經有帳號?<a href="/users/login">登入</a></div>
    </form>
    </div> 
  </div> 
</div>       
